{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"es2015"
		],

		"rootDir": ".",
		"outDir": "./dist", 

		"strict": true,
		"allowJs": true,    
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,   

		"pretty": true,
		"skipLibCheck": true    
	},
	"include": [
		"typings/**/*",
		"src/**/*.ts",
		"**/*.ts"
	],
	"exclude":["node_modules"]
}
